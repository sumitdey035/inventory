%div
  .page-title
    .title_left
      %h3
        %i.fa.fa-sitemap
        = "Categories"
  .clearfix
  .row
    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        = render :partial => 'form'
      .col-md-6.col-sm-6.col-xs-6
        .table-responsive
          %table.table.table-striped.jambo_table.bulk_action
            %thead
              %tr.headings
                %th.column-title Name
                %th.col-md-4.column-title Object
                %th.column-title.no-link.last
                  %span.nobr Action
                %th.bulk-actions{:colspan => "7"}
                  %a.antoo{:style => "color:#fff; font-weight:500;"}
                    Bulk Actions (
                    %span.action-cnt               )
                    %i.fa.fa-chevron-down
            %tbody= render @categories
        .pull-right= paginate @categories
