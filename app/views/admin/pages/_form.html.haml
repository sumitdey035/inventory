= form_for [:admin, @page], html: { class:"form-horizontal", multipart: true } do |f|
  - if @page.errors.any?
    .alert.alert-danger
      %p= "#{pluralize(@page.errors.count, "error")} prevented the form from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.text_field :title, class: "form-control", placeholder: "Enter page title", required: true
  .form-group
    = f.text_area :description, class: "form-control wysihtml5", placeholder: "Enter page description"
              
  .form-group.text-right
    = link_to "Back", admin_pages_path, class: "btn btn-default"
    = f.submit :save, class: "btn btn-success"
