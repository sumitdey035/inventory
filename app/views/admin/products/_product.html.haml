%tr.pointer
  %td.a-center
    %input.flat{type: "checkbox", id: dom_id(product)}
  %td
    .fa-star.fa{ class: ( product.featured ? 'text-danger' : 'text-default' )}
    = product.name
  %td
    .fa.fa-inr
    = product.product_price
  %td
    .fa.fa-inr
    = product.sell_price
  %td= product.category.name
  %td= product.status == 1 ? 'Published' : 'Draft'
  %td= product.current_stock
  %td.last
    / %a.fa.fa-plus-square.fa-lg{"data-target" => "#addStockModal", "data-toggle" => "modal", :type => "button"}
    = link_to edit_admin_product_path(product) do
      .fa.fa-edit.fa-lg
    = link_to [:admin, product], data: {confirm: 'Are you sure?'}, method: :delete do
      .fa.fa-trash.fa-lg
