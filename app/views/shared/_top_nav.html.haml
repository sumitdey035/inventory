/ NAVIGATION
%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header.page-scroll
      %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand.page-scroll{:href => root_path}
        %img#logo.animated.flipInX= image_tag('logo-sautra.png')
    / Collect the nav links, forms, and other content for toggling
    .collapse.navbar-collapse.navbar-ex1-collapse
      %ul.nav.navbar-nav{:style => "float:right"}
        / Hidden li included to remove active class from about link when scrolled up past about section
        %li.hidden
          %a.page-scroll{:href => "#page-top"}
        %li
          %a.page-scroll{:href => "#collections"} COLLECTIONS
        %li
          %a.page-scroll{:href => "#fact"} STORIES & TALES
        %li
          %a.page-scroll{:href => ".main-footer"} REACH US
        %li
          = link_to "#{current_user.cart_items.count}", cart_items_path, class:"page-scroll fa fa-shopping-cart cart", "data-target" => "#cartModal", "data-toggle" => "modal", remote: true if current_user
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              .fa.fa-user
              = current_user.email
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Orders", orders_path
              %li.divider
              %li= link_to "Wish List", orders_path
              %li.divider
              %li= link_to "Account", "/"
              %li.divider
              %li= link_to "Logout", "/"