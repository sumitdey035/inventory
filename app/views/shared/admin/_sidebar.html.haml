.col-md-3.left_col
  .left_col.scroll-view
    .navbar.nav_title{:style => "border: 0;"}
      %a.site_title{:href => root_path}
        %i.fa.fa-folder-open-o
        %span= t 'site.name'
    .clearfix
    / menu profile quick info
    .profile
      .profile_pic
        = image_tag('img.jpg', alt: "...", class: "img-circle profile_img")
      .profile_info
        %span Welcome,
        %h2= current_user.email.split("@")[0]
    / /menu profile quick info
    %br/
    / /sidebar menu
    #sidebar-menu.main_menu_side.hidden-print.main_menu
      .menu_section
        %h3 General
        %ul.nav.side-menu
          %li
            %a{ :href => admin_admin_index_path}
              %i.fa.fa-dashboard
              Dashboard
          %li
            %a{ :href => admin_categories_path}
              %i.fa.fa-sitemap
              Categories
          %li
            %a{ :href => admin_brands_path}
              %i.fa.fa-tags
              Brands
          %li
            %a{:href => admin_pages_path}
              %i.fa.fa-sticky-note
              Pages
          %li
            %a{:href => admin_posts_path}
              %i.fa.fa-sticky-note
              Posts
          %li
            %a{:href => admin_products_path}
              %i.fa.fa-cubes
              Product
          %li
            %a{ :href => admin_catelogs_path}
              %i.fa.fa-book
              Catelogs
          %li
            %a{ :href => admin_price_requests_path}
              %i.fa.fa-rupee
              Price Requests
          %li
            %a{ :href => admin_image_sliders_path}
              %i.fa.fa-image
              Image Sliders
    / /sidebar menu
    / /menu footer buttons
    .sidebar-footer.hidden-small
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Settings"}
        %span.glyphicon.glyphicon-cog{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "FullScreen"}
        %span.glyphicon.glyphicon-fullscreen{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Lock"}
        %span.glyphicon.glyphicon-eye-close{"aria-hidden" => "true"}
      %a{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Logout"}
        %span.glyphicon.glyphicon-off{"aria-hidden" => "true"}
    / /menu footer buttons