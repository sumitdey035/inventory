#wrapper
  #login.form
    %section.login_content
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %h1 Login Form
        - if alert
          .alert.alert-danger= alert 
        %div
          = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Username"
        %div
          = f.password_field :password, autocomplete: "off", class: "form-control"

        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        %div
          %a= f.submit "Log in", class: "btn btn-default submit"
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to "Lost your password?", new_password_path(resource_name), class: "reset_pass"
        .clearfix
        .separator
          - if devise_mapping.registerable? && controller_name != 'registrations'
            %p.change_link
              New to site?
              = link_to "Create Account", new_registration_path(resource_name), class: "to_register"
          .clearfix
          %div
