%section#collections
  .row
    .header-text
      %h2 COLLECTiONS
    / slider/carousel
    .container
      .col-md-8
        #carousel-example-generic.carousel.slide.carousel-fade{"data-ride" => "carousel"}
          / Indicators
          %ol.carousel-indicators
            %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
            %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
            %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
          / Wrapper for slides
          .carousel-inner{:role => "listbox"}
            - @catelogs.each_with_index do |catelog, index|
              .item{ class: "#{ "active" if index == 0 }"}
                = image_tag(catelog.pictures.first.avatar.url(:large))
                .carousel-caption
                  = link_to catelog do
                    %h2= catelog.name
          / Controls
          %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
            %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
            %span.sr-only Previous
          %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
            %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
            %span.sr-only Next
      / collection cards
      .col-md-4
        .content
          .grid
            - @catelogs.last(2).each do |catelog|
              %figure.effect-sadie
                = image_tag(catelog.pictures.first.avatar.url(:large))
                %figcaption
                  %h2= catelog.name
                  %p
                    Sadie never took her eyes off me.
                    %br She had a dark soul.
                  = link_to "catelog", catelog
    .col-md-12
      %center
        = link_to "See all collections", catelogs_path, class: "btn btn-sautra"